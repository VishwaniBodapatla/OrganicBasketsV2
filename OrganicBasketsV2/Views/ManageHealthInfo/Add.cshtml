@model OrganicBasketsV2.Models.HealthInfo

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Health Data</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #e7f9e7;
            font-family: 'Arial', sans-serif;
        }

        h1 {
            font-family: 'Cursive', sans-serif;
            color: #006400;
            text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);
            text-align: center;
            margin-top: 50px;
        }

        .form-label {
            font-weight: bold;
            color: #006400;
        }

        .form-control {
            border-radius: 5px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .btn-primary {
            background-color: #32CD32;
            border-color: #32CD32;
        }

            .btn-primary:hover {
                background-color: #228B22;
                border-color: #228B22;
            }

        .selected-diets {
            font-style: italic;
            color: #32CD32;
            margin-bottom: 10px;
            padding: 10px;
            border: 1px solid #32CD32;
            border-radius: 5px;
        }
    </style>
</head>
<body>

    <div class="container mt-5">
        <h1>Add Health Data</h1>
        <form method="post" asp-action="Add">
            <div class="row">
                <!-- Left side of the form -->
                <div class="col-md-6">
                    <div class="mt-3">
                        <label class="form-label">Age</label>
                        <input type="number" class="form-control" asp-for="Age" />
                    </div>

                    <div class="mt-3">
                        <label class="form-label">Gender</label>
                        <select class="form-control" asp-for="Gender">
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>

                    <div class="mt-3">
                        <label class="form-label">Weight (kg)</label>
                        <input type="number" class="form-control" asp-for="WeightKg" step="0.1" />
                    </div>

                    <div class="mt-3">
                        <label class="form-label">Height (cm)</label>
                        <input type="number" class="form-control" asp-for="HeightCm" />
                    </div>

                    <div class="mt-3">
                        <label class="form-label">Disease Type (if any)</label>
                        <input type="text" class="form-control" asp-for="DiseaseType" />
                    </div>

                    <div class="mt-3">
                        <label class="form-label">Severity</label>
                        <input type="text" class="form-control" asp-for="Severity" />
                    </div>
                </div>

                <!-- Right side of the form -->
                <div class="col-md-6">
                    <div class="mt-3">
                        <label class="form-label">Physical Activity Level</label>
                        <select class="form-control" asp-for="PhysicalActivityLevel">
                            <option value="Sedentary">Sedentary</option>
                            <option value="Lightly Active">Lightly Active</option>
                            <option value="Moderate">Moderately Active</option>
                            <option value="Very Active">Very Active</option>
                            <option value="Super Active">Super Active</option>
                        </select>
                    </div>

                    <div class="mt-3">
                        <label class="form-label">Daily Caloric Intake (kcal)</label>
                        <input type="number" class="form-control" asp-for="DailyCaloricIntake" />
                    </div>

                    <div class="mt-3">
                        <label class="form-label">Cholesterol (mg/dL)</label>
                        <input type="number" class="form-control" asp-for="CholesterolMgDL" />
                    </div>

                    <div class="mt-3">
                        <label class="form-label">Blood Pressure (mmHg)</label>
                        <input type="text" class="form-control" asp-for="BloodPressureMmHg" />
                    </div>

                    <div class="mt-3">
                        <label class="form-label">Glucose Level (mg/dL)</label>
                        <input type="number" class="form-control" asp-for="GlucoseMgDL" />
                    </div>

                    <div class="mt-3">
                        <label class="form-label">Dietary Restrictions</label>
                        <input type="text" class="form-control" asp-for="DietaryRestrictions" />
                    </div>

                    <div class="mt-3">
                        <label class="form-label">Allergies</label>
                        <input type="text" class="form-control" asp-for="Allergies" />
                    </div>

                    <div class="mt-3">
                        <label class="form-label">Preferred Cuisine</label>
                        <input type="text" class="form-control" asp-for="PreferredCuisine" />
                    </div>

                    <div class="mt-3">
                        <label class="form-label">Weekly Exercise Hours</label>
                        <input type="number" class="form-control" asp-for="WeeklyExerciseHours" step="0.1" />
                    </div>

                    <div class="mt-3">
                        <label class="form-label">Adherence to Diet Plan</label>
                        <input type="number" class="form-control" asp-for="AdherenceToDietPlan" step="0.1" />
                    </div>

                    <div class="mt-3">
                        <label class="form-label">Dietary Nutrient Imbalance Score</label>
                        <input type="number" class="form-control" asp-for="DietaryNutrientImbalanceScore" step="0.1" />
                    </div>

                    <!-- Diet Recommendations (multi-select) -->

                    <form method="post" asp-action="Add">
                        @Html.AntiForgeryToken()  <!-- Add Anti-forgery token for CSRF protection -->
                        <!-- Your form fields go here -->
                        <button type="submit" class="btn btn-primary btn-block">Save</button>
                    </form>
                </div>
            </div>
        </form>
    </div>


</body>
</html>

