@model OrganicBasketsV2.Models.RegistrationViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Registration</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #e7f9e7;
            font-family: 'Arial', sans-serif;
        }

        h2 {
            font-family: 'Cursive', sans-serif;
            color: #006400;
            text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);
            text-align: center;
            margin-top: 40px;
        }

        .form-label, label {
            font-weight: bold;
            color: #006400;
        }

        .form-control, input[type="text"], input[type="email"], input[type="password"] {
            border-radius: 5px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        fieldset {
            margin-bottom: 25px;
            padding: 20px;
            border: 1px solid #c3e6cb;
            border-radius: 8px;
            background-color: #f6fff6;
        }

        button[type="submit"] {
            background-color: #32CD32;
            border-color: #32CD32;
            color: white;
            padding: 10px 20px;
            font-weight: bold;
            border-radius: 5px;
        }

            button[type="submit"]:hover {
                background-color: #228B22;
                border-color: #228B22;
            }

        .container {
            max-width: 800px;
            margin-top: 30px;
            margin-bottom: 50px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Registration</h2>
        <form asp-action="Registration" method="post">
            <fieldset>
                <legend>User Details</legend>
                <div class="mb-3">
                    <label>Full Name</label>
                    <input type="text" class="form-control" asp-for="FullName" required />
                </div>
                <div class="mb-3">
                    <label>Email</label>
                    <input type="email" class="form-control" asp-for="Email" required />
                </div>
                <div class="mb-3">
                    <label>Username</label>
                    <input type="text" class="form-control" asp-for="UserName" required />
                </div>
                <div class="mb-3">
                    <label>Password</label>
                    <input type="password" class="form-control" asp-for="Password" required />
                </div>
                <div class="mb-3">
                    <label>Phone Number</label>
                    <input type="text" class="form-control" asp-for="PhoneNumber" />
                </div>
                <div class="mb-3">
                    <label class="form-label" for="IsVendor">Are you Also a Vendor?</label>
                    <select class="form-control" asp-for="IsVendor" id="IsVendor">
                        <option value="">Select Vendor Confirmation</option>
                        <option value="Yes">Yes</option>
                        <option value="No">No</option>
                    </select>
                </div>
            </fieldset>

            <fieldset>
                <legend>Address Details</legend>
                <div class="mb-3">
                    <label>Address Line 1</label>
                    <input type="text" class="form-control" asp-for="AddressLine1" required />
                </div>
                <div class="mb-3">
                    <label>Address Line 2</label>
                    <input type="text" class="form-control" asp-for="AddressLine2" />
                </div>
                <div class="mb-3">
                    <label>City</label>
                    <input type="text" class="form-control" asp-for="City" required />
                </div>
                <div class="mb-3">
                    <label>State</label>
                    <input type="text" class="form-control" asp-for="State" required />
                </div>
                <div class="mb-3">
                    <label>Postal Code</label>
                    <input type="text" class="form-control" asp-for="PostalCode" required />
                </div>
                <div class="mb-3">
                    <label>Country</label>
                    <input type="text" class="form-control" asp-for="Country" required />
                </div>
                <div class="mb-3">
                    <label class="form-label" for="UserType">User Type</label>
                    <select class="form-control" asp-for="UserType" id="UserType">
                        <option value="">Select User Type</option>
                        <option value="Customer">Customer</option>
                        <option value="Vendor">Vendor</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="LocationType">Location Type</label>
                    <select class="form-control" asp-for="LocationType" id="LocationType">
                        <option value="Home">Home</option>
                        <option value="Office">Office</option>
                        <option value="Other">Other</option>
                    </select>
                </div>
            </fieldset>

            <div class="text-center">
                <button type="submit">Register</button>
            </div>
        </form>
    </div>
</body>
</html>
