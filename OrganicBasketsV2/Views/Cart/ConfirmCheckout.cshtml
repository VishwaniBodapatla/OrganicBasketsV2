@{
}
@model dynamic

<h1>Confirm Checkout</h1>
<p>Total Items: @Model.TotalItems</p>
<p>Total Amount: $@Model.TotalAmount</p>
<p>Are you sure you want to place the order?</p>

<div class="mt-4 text-center">
    <form asp-controller="Cart" asp-action="PlaceOrder" method="post">
        <button type="submit" class="btn btn-success">Yes, Place Order</button>
        <a asp-controller="Cart" asp-action="Index" class="btn btn-danger">Cancel</a>
    </form>
</div>
